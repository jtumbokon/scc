{
  "sync_settings": {
    "auto_sync": {
      "enabled": true,
      "triggers": [
        "file_change",
        "version_update",
        "dependency_change",
        "manual_request"
      ],
      "interval_seconds": 300
    },
    "cascade_settings": {
      "parallel_processing": true,
      "max_concurrent_updates": 5,
      "timeout_seconds": 600,
      "retry_attempts": 3
    },
    "validation_settings": {
      "validate_before_cascade": true,
      "validate_after_cascade": true,
      "strict_mode": false,
      "auto_fix_minor_issues": true
    },
    "backup_settings": {
      "auto_backup": true,
      "backup_frequency": "before_major_changes",
      "max_backups": 10,
      "backup_location": "registry/backups"
    },
    "notification_settings": {
      "cascade_success": true,
      "cascade_failure": true,
      "validation_errors": true,
      "version_conflicts": true
    },
    "performance_settings": {
      "cache_dependencies": true,
      "cache_validation_results": true,
      "lazy_loading": true,
      "memory_limit_mb": 512
    }
  },
  "sync_operations": {
    "full_sync": {
      "description": "Complete system synchronization",
      "includes": ["all_modules", "dependencies", "versions", "registry"],
      "cascade_level": "full"
    },
    "incremental_sync": {
      "description": "Incremental updates only",
      "includes": ["changed_modules", "affected_dependencies"],
      "cascade_level": "affected_only"
    },
    "validation_sync": {
      "description": "Validation and integrity check only",
      "includes": ["validation", "integrity_check"],
      "cascade_level": "none"
    }
  },
  "conflict_resolution": {
    "strategy": "latest_wins",
    "fallback_strategies": ["manual_review", "backup_restore", "skip_update"],
    "conflict_log": "registry/conflict-log.json"
  },
  "logging": {
    "level": "info",
    "log_file": "registry/sync-log.json",
    "max_log_size_mb": 10,
    "log_rotation": true
  }
}